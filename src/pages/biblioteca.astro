<style>
    body {
        font-family: sans-serif;
        display: flex;
        flex-direction: column;
        background: rgb(100,0,129);
		background: linear-gradient(0deg, rgba(100,0,129,1) 0%, rgba(7,7,7,1) 17%, rgba(0,0,0,1) 95%, rgba(84,1,107,1) 100%);
	
    }

    .txt {
            position: relative;
        right: 11rem;
    }

        h2 {
            color: white;
        }

        .h2-2 {
            color: #CA1DA4;
        }

        .slider-container {
            position: relative;
            width: 80%;
            max-width: 1200px;
            overflow: hidden;
            background-color: #ffffff00;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .slider {
            display: flex;
            transition: transform 0.5s ease-in-out;
        }

        .slide {
            min-width: 33.3333%;
            box-sizing: border-box;
            padding: 20px;
            display: flex;
            background-color: rgba(0, 0, 0, 0);
            flex-direction: column;
            align-items: center;
        }

        .slide .image-container {
            width: 100%;
            height: 20rem;
        }

        .slide .image-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        audio {
            width: 100%;
            background-color: #f1f3f4;
            outline: none;
        }

        .prev, .next {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            background-color: rgb(0 0 0 / 0%);
            color: white;
            border: none;
            cursor: pointer;
            z-index: 1;
            font-size: 3rem;
        }

        .prev {
            left: -8px;
            top: 13rem;
        }

        .next {
            right: -8px;
            top: 13rem;
        }

        .prev:hover, .next:hover {
            background-color: rgba(0, 0, 0, 0.7);
        }

        .audio-player::-webkit-media-controls-enclosure {
    overflow: hidden;
}

.audio-player::-webkit-media-controls-panel {
    width: calc(100% - 35px); /* Ajusta según sea necesario */
}

.audio-player::-webkit-media-controls-download-button {
    display: none;
}


        @media screen and (max-width: 430px) {

            .slider-container{
                width: 90%;
        
            }

            .slide{
                min-width: 95%;
            }

            .txt{
                position: static;
                
            }


        }

    </style>